{{reviewable-topic-link reviewable=reviewable tagName=''}}
<div class='post-contents-wrapper'>
  {{reviewable-created-by user=reviewable.target_created_by tagName=''}}
  <div class='post-contents'>
    {{reviewable-created-by-name user=reviewable.target_created_by tagName=''}}
    <div class='post-body'>
      {{{ reviewable.payload.post_cooked }}}
    </div>
    <div class="sift-classification">
      {{#if reviewable.payload.sift }}
        {{#each-in reviewable.payload.sift.topics as |topicKey topicValue|}}
          <span class="sift-classification-unit sift-risk-{{topicValue}}">
            <span class="sift-topic sift-topic-{{topicKey}}"></span>
            <span class="sift-risk sift-risk-{{topicValue}}">{{topicValue}}</span>
          </span>  
        {{/each-in}}
        <div class="sift-classification-failure-reason-block">
          {{#if reviewable.payload.sift.failure_reasons}}
            {{#each reviewable.payload.sift.failure_reasons as |slot|}}
                <div class="sift-classification-failure-reason">
                    <div class="sift-classification-failure-reason-text">
                        {{slot.text}}
                    </div>
                    <div class="sift-classification-failure-reason-normalized">
                  <span class="sift-classification-unit sift-risk-{{slot.topics.[0]}}">
                      {{slot.normalized}}
                  </span>

                    </div>
                </div>
            {{/each}}
          {{~else~}}
            <span>{{i18n 'sift.no_sift_failure_reasons'}}</span>
          {{/if}}
        </div>
      {{~else~}}
        <span>{{i18n 'sift.no_sift_info'}}</span>
      {{/if}}
    </div>

      {{yield}}
  </div>
</div>
